<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/main"
                
                android:endColor="@color/main_dark"
                android:angle="180" />
            <stroke
                android:width="0dp"
                android:color="@color/white" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/main"
                android:startColor="@color/main_dark"
                android:angle="180" />
            <stroke
                android:width="0dp"
                android:color="@color/white" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/main"
                
                android:startColor="@color/main_dark"
                android:angle="180" />
            <stroke
                android:width="0dp"
                android:color="@color/white" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>

</selector>