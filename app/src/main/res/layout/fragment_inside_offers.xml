<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offer_frame_ins"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main">

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/ins_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ins_img" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/ins_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/no_oint_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ins_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/view9"
            app:layout_constraintStart_toStartOf="@+id/view9"
            app:layout_constraintTop_toBottomOf="@+id/ins_img" />

        <TextView
            android:id="@+id/ins_cont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:lineSpacingExtra="8sp"
            android:maxLines="10"
            android:overScrollMode="ifContentScrolls"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:scrollbarThumbVertical="@color/main"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="@+id/ins_title"
            app:layout_constraintStart_toStartOf="@+id/ins_title"
            app:layout_constraintTop_toBottomOf="@+id/view9" />

        <LinearLayout
            android:id="@+id/of_loc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/main"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ins_cont">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/go_to_lo"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0"
                android:src="@drawable/go_to" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>