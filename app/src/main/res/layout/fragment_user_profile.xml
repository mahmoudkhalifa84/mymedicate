<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".ui.main_screen.user_profile.UserProfile">

    <View
        android:id="@+id/view21"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout222" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout222"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="?attr/selectableItemBackground"
        android:elevation="1dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/us_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/user_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/txt_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="-------"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textColorHint="@color/light_gray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/us_img"
            app:layout_constraintTop_toTopOf="@+id/us_img" />

        <TextView
            android:id="@+id/txt_show_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="------------------"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            app:layout_constraintStart_toEndOf="@+id/us_img"
            app:layout_constraintTop_toBottomOf="@+id/txt_show_name" />

        <TextView
            android:id="@+id/txt_show_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="------------------"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/us_img"
            app:layout_constraintTop_toBottomOf="@+id/txt_show_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout222">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"
                android:text="@string/user_info"
                android:textColor="@color/main"
                android:textSize="20sp" />


            <LinearLayout
                android:id="@+id/up_qr"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"


                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/qr" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="@string/my_qr_code"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"

                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/main" />


            </LinearLayout>

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="67dp"
                android:layout_marginBottom="5dp"
                android:background="@color/true_gray" />

            <LinearLayout
                android:id="@+id/up_appo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"


                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/appp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="@string/prof_app"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"

                    android:contentDescription="TODO"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/main" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="67dp"
                android:layout_marginBottom="5dp"
                android:background="@color/true_gray" />

            <LinearLayout
                android:id="@+id/up_helth_rec"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"


                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/settings_user_file" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="@string/pers_rec"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView


                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"

                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/main" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="67dp"
                android:layout_marginBottom="5dp"
                android:background="@color/true_gray" />

            <LinearLayout
                android:id="@+id/up_files_rec"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"


                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/medic_files" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="@string/medi_files"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView


                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"

                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/main" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="67dp"
                android:layout_marginBottom="5dp"
                android:background="@color/true_gray" />

            <LinearLayout
                android:id="@+id/up_apple_rec"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"


                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/life_style" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="@string/hlth_life"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView


                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"

                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/main" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="67dp"
                android:layout_marginBottom="5dp"
                android:background="@color/true_gray" />
            <LinearLayout
                android:id="@+id/adv_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"

                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                   android:src="@drawable/settings" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="@string/action_settings_adv"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView


                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"

                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/main" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/show_ly_cons"
        layout="@layout/show_qr_layer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout222" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:src="@drawable/back_arr_ar" />

        <TextView
            android:id="@+id/textView108"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/user_prof"
            android:textColor="@color/main"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>