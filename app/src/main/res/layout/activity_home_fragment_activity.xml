<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_activity"
    android:keepScreenOn="true"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity"
    tools:openDrawer="start">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:navigationIcon="@drawable/ic_drawer_ind"
            android:theme="@style/AppTheme"
            app:popupTheme="@style/AppTheme"
            app:titleTextColor="@color/main" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container"/>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:itemTextColor="@color/main"
        app:itemIconSize="20dp"
        app:elevation="5dp"
        app:itemIconTint="@color/main"
        android:background="@drawable/spinner_city_background"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"

        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>