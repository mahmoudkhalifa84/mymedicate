<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:alpha="0.1"
        android:layoutDirection="rtl"
        android:src="@drawable/ic_main_back_spider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layoutDirection="rtl"

                    android:orientation="horizontal"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ll_notify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/main_img_myaccount"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="12dp"
                            android:src="@drawable/main_notifications"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/noti"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginEnd="32dp"
                            android:background="@drawable/item_count"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="@+id/imageView9"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/count_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="8sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/od_img3"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:src="@drawable/main_doctors"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:text="@string/Hello"
                            android:textColor="@color/main"
                            android:textSize="30sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="34dp"
                            android:layoutDirection="ltr"
                            android:src="@drawable/ic_1010"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <ImageView
                        android:id="@+id/main_img_myaccount"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="12dp"
                        android:src="@drawable/ic_money"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/main" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <LinearLayout
                        android:id="@+id/ll_claims"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:background="?attr/selectableItemBackground"
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/icons_size_h"
                            android:layout_height="@dimen/icons_size_w"

                            android:elevation="3dp"
                            android:src="@drawable/main_claims" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:text="@string/claims"
                            android:textAlignment="center"
                            android:textColor="@color/main"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pers_file"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/icons_size_w"
                            android:layout_height="@dimen/icons_size_h"
                            android:layout_gravity="center"

                            android:elevation="3dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/main_peesonal_file" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:text="@string/user_prof"
                            android:textAlignment="center"
                            android:textColor="@color/main"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_offers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:background="?attr/selectableItemBackground"
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="@dimen/icons_size_w"
                            android:layout_height="@dimen/icons_size_h"
                            android:layout_gravity="center"

                            android:elevation="3dp"
                            android:src="@drawable/main_offers" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:text="@string/deels"
                            android:textAlignment="center"

                            android:textColor="@color/main"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_servics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:background="?attr/selectableItemBackground"
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="@dimen/icons_size_w"
                            android:layout_height="@dimen/icons_size_h"
                            android:layout_gravity="center"

                            android:elevation="3dp"
                            android:src="@drawable/main_servics" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:text="@string/main_servics"
                            android:textAlignment="center"

                            android:textColor="@color/main"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="16sp"
                    android:paddingTop="8dp"
                    android:paddingRight="16sp"
                    android:text="@string/how_can_we_help_you"
                    android:textColor="@color/main"
                    android:textSize="24sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/help_network"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <ImageView
                                android:layout_width="@dimen/icons_size_h"
                                android:layout_height="@dimen/icons_size_h"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"

                                android:elevation="3dp"
                                android:src="@drawable/main_network" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|top"
                                android:text="@string/Providers_Network_2"
                                android:textAlignment="center"
                                android:textColor="@color/main"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/help_ask_dector"

                            android:layout_width="110dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/icons_size_h"
                                android:layout_height="@dimen/icons_size_h"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"

                                android:elevation="3dp"
                                android:src="@drawable/main_ask_doc" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|top"
                                android:text="@string/ask_doc"
                                android:textAlignment="center"
                                android:textColor="@color/main"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/help_booking"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/icons_size_h"
                                android:layout_height="@dimen/icons_size_h"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:elevation="3dp"
                                android:src="@drawable/main_booking" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|top"
                                android:text="@string/booking_min"
                                android:textAlignment="center"
                                android:textColor="@color/main"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/report_main"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="@dimen/icons_size_h"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"

                                android:elevation="3dp"
                                android:src="@drawable/main_prb" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|top"
                                android:text="@string/rep_prp"
                                android:textAlignment="center"
                                android:textColor="@color/main"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/card_requst"
                    android:textColor="@color/main"
                    android:textSize="24sp" />

                <LinearLayout
                    android:id="@+id/lay_re_card"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/main_card_back"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:padding="7dp">

                    <ImageView
                        android:id="@+id/img_request_card"
                        android:layout_width="60dp"
                        android:layout_height="50dp"

                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/card" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        app:tint="@color/white" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/help_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="1.0"
            android:background="@drawable/main_items_back_new"
            android:src="@drawable/chat_svg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop"

            />
        <LinearLayout
            android:id="@+id/chatnoti"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/item_count"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/help_chat"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/Chat_count_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>